---
/**
 * SEO Head Component
 *
 * Provides comprehensive SEO meta tags including:
 * - Basic meta tags (title, description)
 * - Canonical URL
 * - Open Graph tags for social sharing
 * - Twitter Card tags
 * - Sitemap and RSS links
 *
 * @example
 * ```astro
 * <SEO
 *   title="Page Title"
 *   description="Page description for SEO"
 *   image="/images/og-image.png"
 *   type="website"
 * />
 * ```
 */
interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: Date;
  author?: string;
  noindex?: boolean;
  schema?: Record<string, any> | Record<string, any>[];
}

const {
  title,
  description,
  image,
  type = 'website',
  publishedTime,
  author = 'Arcate Labs',
  noindex = false,
  schema,
} = Astro.props;

// Fallback for dev server when Astro.site might be undefined
const siteUrl = Astro.site ?? new URL('http://localhost:4321');
const canonicalURL = new URL(Astro.url.pathname, siteUrl);

// Auto-generate OG image path from URL, or use explicit image prop
const ogImagePath = image
  ? image
  : Astro.url.pathname === '/'
    ? '/og/index.png'
    : `/og${Astro.url.pathname.replace(/\/$/, '')}.png`;
const socialImageURL = new URL(ogImagePath, siteUrl);

const siteName = 'Arcate Labs';
const twitterHandle = ''; // TODO: add Twitter handle

// Build breadcrumb from URL path
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
const breadcrumbItems = [
  { "@type": "ListItem", "position": 1, "name": "Home", "item": siteUrl.toString().replace(/\/$/, '') }
];
pathSegments.forEach((segment, i) => {
  const path = '/' + pathSegments.slice(0, i + 1).join('/');
  breadcrumbItems.push({
    "@type": "ListItem",
    "position": i + 2,
    "name": segment.replace(/-/g, ' ').replace(/\b\w/g, c => c.toUpperCase()),
    "item": new URL(path, siteUrl).toString()
  });
});

const breadcrumbSchema = pathSegments.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbItems
} : null;

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Arcate Labs",
  "url": siteUrl.toString().replace(/\/$/, ''),
  "logo": new URL('/logo.svg', siteUrl).toString(),
  "description": "Arcate Labs is an automation-first development studio. We build automation systems, SEO infrastructure, and AI-powered workflows.",
  "sameAs": []
};

// Combine all schema: org + breadcrumb + page-specific
const allSchemas: Record<string, any>[] = [organizationSchema];
if (breadcrumbSchema) allSchemas.push(breadcrumbSchema);
if (schema) {
  if (Array.isArray(schema)) {
    allSchemas.push(...schema);
  } else {
    allSchemas.push(schema);
  }
}
---

<!-- Primary Meta Tags -->
<meta name="title" content={title} />
<meta name="description" content={description} />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={title} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="en_US" />

{type === 'article' && publishedTime && (
  <>
    <meta property="article:published_time" content={publishedTime.toISOString()} />
    <meta property="article:author" content={author} />
  </>
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={socialImageURL} />
<meta name="twitter:image:alt" content={title} />

<!-- Sitemap & RSS -->
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" title="Arcate Labs Blog RSS Feed" href="/rss.xml" />

<!-- Structured Data -->
{allSchemas.map(s => (
  <script type="application/ld+json" set:html={JSON.stringify(s)} />
))}
