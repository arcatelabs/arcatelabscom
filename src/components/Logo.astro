---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  size = 'md',
  class: className = '',
} = Astro.props;

const heightClasses = {
  sm: 'h-5',
  md: 'h-6',
  lg: 'h-8',
};
---

<a href="/" class:list={["flex items-center", className]}>
  <img
    src="/logo-dark.svg"
    alt="Arcate Labs"
    class:list={[heightClasses[size], "w-auto block dark:hidden"]}
  />
  <img
    src="/logo.svg"
    alt="Arcate Labs"
    class:list={[heightClasses[size], "w-auto hidden dark:block"]}
  />
</a>
