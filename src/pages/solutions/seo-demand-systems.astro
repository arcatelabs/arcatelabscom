---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Features from "@/components/sections/Features.astro";
import CTA from "@/components/sections/CTA.astro";

const capabilities = [
  {
    title: "Search Data Infrastructure",
    description: "Connect SEMrush, Ahrefs, Google Search Console, GMB, DataForSEO, and CPC/PPC data into a unified system.",
    icon: "globe",
  },
  {
    title: "Automated Reporting & Dashboards",
    description: "Live dashboards and automated reports that surface actionable insights — not vanity metrics.",
    icon: "chart",
  },
  {
    title: "Content Systems That Rank",
    description: "Programmatic and editorial content pipelines integrated with your search data to produce high-ranking pages at scale.",
    icon: "zap",
  },
  {
    title: "Landing Page Optimization",
    description: "High-converting landing pages built on performance data. Designed to capture demand at every stage of the funnel.",
    icon: "shield",
  },
  {
    title: "Full-Funnel Optimization",
    description: "Bottom-to-top funnel strategy — from first click to conversion. Organic and paid channels working together.",
    icon: "users",
  },
  {
    title: "Programmatic Site Development",
    description: "Flexible, data-driven sites designed to scale across markets, locations, or service categories.",
    icon: "lock",
  },
];
---

<BaseLayout title="SEO Demand Systems" description="Data-driven search infrastructure that turns organic and paid channels into measurable, compounding demand.">
  <div class="container max-w-5xl mx-auto py-20 px-4 sm:px-6">
    <a href="/solutions" class="text-sm text-muted-foreground hover:text-foreground transition-colors mb-8 inline-block">&larr; All Solutions</a>

    <div class="mb-16">
      <div class="mb-4 inline-block px-3 py-1 bg-primary/10 text-primary text-sm font-medium rounded-full">
        Search
      </div>
      <h1 class="text-5xl font-bold tracking-tight md:text-6xl mb-6">SEO Demand Systems</h1>
      <p class="text-xl text-muted-foreground max-w-3xl">
        Data-driven search infrastructure that turns organic and paid channels into measurable, compounding demand.
      </p>
    </div>

    <div class="space-y-6 text-lg text-muted-foreground leading-relaxed max-w-3xl mb-8">
      <p>
        Most SEO is reactive — monthly reports, one-off audits, and campaigns that end when the budget runs out. We build systems instead. Infrastructure that connects your search data, automates your content pipeline, and compounds over time.
      </p>
      <p>
        We integrate directly with the tools that matter — SEMrush, Ahrefs, Google Search Console, Google Business Profile, DataForSEO, and your paid channels — to create a unified view of search performance. From there, we build the dashboards, content systems, and landing pages that turn search intent into real business outcomes.
      </p>
    </div>
  </div>

  <Features
    title="Capabilities"
    subtitle="Everything needed to build a search infrastructure that compounds."
    features={capabilities}
  />

  <CTA
    title="Ready to build your demand system?"
    description="Let's look at your search data and design a system that grows with you."
    cta={{ href: "/contact", label: "Start a Conversation" }}
  />
</BaseLayout>
